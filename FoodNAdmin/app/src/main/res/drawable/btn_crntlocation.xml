<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >>
        <shape android:shape="oval"  >
            <corners android:radius="360dip" />
            <solid android:color="#ff3e00"/>
            <padding
                android:left="11dp"
                android:right="11dp"
                android:top="11dp"
                android:bottom="11dp"/>
        </shape>
    </item>
    <item android:state_focused="true" >>
        <shape android:shape="oval"  >
            <corners android:radius="360dip" />
            <solid android:color="#ff3e00"/>
            <padding
                android:left="11dp"
                android:right="11dp"
                android:top="11dp"
                android:bottom="11dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval"  >
            <corners android:radius="360dip" />
            <solid android:color="#ff3e00"/>
            <padding
                android:left="13dp"
                android:right="13dp"
                android:top="13dp"
                android:bottom="13dp"/>
        </shape>
    </item>
</selector>